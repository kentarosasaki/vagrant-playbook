Vagrant.configure("2") do |config|
  config.vm.box = "{{ vagrant_box }}"
  config.vm.box_version = "{{ vagrant_box_version }}"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = "{{ vagrant_box_memory }}"
  end

  N = 2
  (1..N).each do |machine_id|
    config.vm.define "machine#{machine_id}" do |machine|
      #machine.vm.hostname = "machine#{machine_id}"
      machine.vm.network "private_network", ip: "192.168.33.#{20+machine_id}"

      if machine_id == 1
        machine.vm.hostname = "gitlab-docker"
        machine.vm.provision "ansible" do |ansible|
          ansible.playbook = "provisioning/gitlab.yml"
          ansible.inventory_path = "provisioning/hosts"
          ansible.limit = 'all'
        end
      end

      if machine_id == 2
        machine.vm.hostname = "ponzu"
        machine.vm.provision "ansible" do |ansible|
          ansible.playbook = "provisioning/ponzu.yml"
          ansible.inventory_path = "provisioning/hosts"
          ansible.limit = 'all'
        end
      end
    end
  end
end
